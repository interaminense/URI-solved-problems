{
	"name": "uri-solved-problems",
	"version": "1.0.0",
	"description": "",
	"main": "index.js",
	"scripts": {
		"test": "jest --coverage",
		"format": "prettier-eslint --write 'src/**/*.js'",
		"lint": "eslint src/"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/interaminense/URI-solved-problems.git"
	},
	"author": "",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/interaminense/URI-solved-problems/issues"
	},
	"homepage": "https://github.com/interaminense/URI-solved-problems#readme",
	"devDependencies": {
		"babel-core": "^6.26.3",
		"babel-eslint": "^8.2.6",
		"babel-jest": "^23.4.2",
		"babel-preset-env": "^1.7.0",
		"eslint": "^5.2.0",
		"eslint-config-airbnb-base": "^13.0.0",
		"eslint-plugin-import": "^2.13.0",
		"eslint-plugin-jest": "^21.18.0",
		"husky": "^0.14.3",
		"jest": "^23.4.2",
		"jest-environment-jsdom": "^23.4.0",
		"lint-staged": "^7.2.0",
		"prettier-eslint-cli": "^4.7.1"
	},
	"transform": {
		"^.+\\.jsx?$": "babel-jest"
	},
	"husky": {
		"hooks": {
			"pre-push": "npm test && lint-staged"
		}
	},
	"lint-staged": {
		"*.js": [
			"prettier-eslint --write",
			"git add"
		]
	},
	"jest": {
		"coverageDirectory": "build/coverage",
		"coverageThreshold": {
			"global": {
				"branches": 90,
				"functions": 90,
				"lines": 90
			}
		},
		"verbose": true,
		"testURL": "http://localhost/"
	}
}
